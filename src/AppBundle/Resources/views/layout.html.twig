{% spaceless %}
    {% set bigColumn = 'col col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12' %}
    {% set halfColumn = 'col col-lg-5 col-lg-offset-1 col-md-5 col-md-offset-1 col-sm-12 col-xs-12' %}
    {% if activePage is not defined %}{% set activePage = '' %}{% endif %}
{% endspaceless %}
<!DOCTYPE html>
<html lang="en" class="no-js">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
        <meta name="description"
              content="{% block pageDescription %}PHPDocker.io is a PHP development environment generator built with Docker containers{% endblock %}"/>
        <meta name="author" content="PHPDocker.io"/>
        <meta name="keywords" content="PHP, Docker, development, environment, generator, phpdocker">

        <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <![endif]-->
        <title>PHPDocker.io{% block pageTitle %}{% endblock %}</title>

        <link property="stylesheet" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald%7CHind%7CShadows+Into+Light"/>

        {% stylesheets filter="cssrewrite"
        'bundles/app/vendor/bootstrap/dist/css/bootstrap.min.css'
        'bundles/app/vendor/font-awesome/css/font-awesome.min.css'
        'bundles/app/vendor/better-share-button/dist/share-button.css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
        {% stylesheets
        '@AppBundle/Resources/public/css/bootstrap-theme.css'
        '@AppBundle/Resources/public/css/theme.css'
        '@AppBundle/Resources/public/vendor/bootstrap-multiselect/dist/css/bootstrap-multiselect.css'
        '@AppBundle/Resources/public/vendor/bootstrap-toggle/css/bootstrap-toggle.css'
        '@AppBundle/Resources/public/vendor/jquery-ui/themes/smoothness/jquery-ui.min.css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    </head>
    <body>
        <div class="navbar navbar-inverse inner-shadow-bottom" id="menu-section">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        PHPDocker.io <span class="beta">beta</span>
                    </a>
                    <button type="button" class="navbar-toggle collapsed glyphicon glyphicon-menu-hamburger" data-toggle="collapse" data-target="#navigation-top" id="navbar-button"></button>
                </div>
                <div class="navbar-collapse collapse" id="navigation-top">
                    <ul class="nav navbar-nav navbar-right">
                        <li {% if activePage == 'news' %}class="active"{% endif %}><a href="{{ path('home') }}">News</a></li>
                        <li {% if activePage == 'generator' %}class="active"{% endif %}><a href="{{ path('generator') }}">Generator</a></li>
                        <li {% if activePage == 'contact' %}class="active"{% endif %}><a href="{{ path('contact') }}">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <main role="main">
            {% block body %}{% endblock %}
        </main>

        <footer class="container">
            <p><a href="{{ path('home') }}">PHPDocker.io &copy; {{ "now"|date("Y") }}</a></p>
        </footer>

        {% include 'AppBundle::analytics.html.twig' %}

        {% javascripts
            '@AppBundle/Resources/public/vendor/jquery/dist/jquery.min.js'
            '@AppBundle/Resources/public/vendor/bootstrap/dist/js/bootstrap.min.js'
            '@AppBundle/Resources/public/vendor/jquery-ui/jquery-ui.min.js'
            '@AppBundle/Resources/public/vendor/bootstrap-multiselect/dist/js/bootstrap-multiselect.js'
            '@AppBundle/Resources/public/vendor/bootstrap-toggle/js/bootstrap-toggle.js'
            '@AppBundle/Resources/public/vendor/better-share-button/dist/share-button.js'
            '@AppBundle/Resources/public/js/*' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
